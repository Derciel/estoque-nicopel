---
import Layout from '../../layouts/Layout.astro';
import { supabase } from '../../lib/supabase';
import Navbar from '../../components/Navbar.astro';

const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/login');
}

const currentPath = Astro.url.pathname;
const userRole = user.profile?.role ?? 'Visitante';
const podeCadastrarItem = ['admin', 'Estoquista_Entrada'].includes(userRole);

let errorMessage: string | null = null;
let successMessage: string | null = null;

if (Astro.request.method === 'POST' && podeCadastrarItem) {
  try {
    const formData = await Astro.request.formData();
    const nome = formData.get('nome')?.toString();
    const categoria = formData.get('categoria')?.toString();
    const cliente_id = formData.get('cliente_id')?.toString();

    if (!nome || !categoria || !cliente_id) {
      throw new Error('Cliente, Nome do Item e Categoria são obrigatórios.');
    }

    const newProduct = {
      nome,
      categoria,
      cliente_id,
      estoque_atual: Number(formData.get('estoque_atual')) || 0,
      estoque_minimo: Number(formData.get('estoque_minimo')) || 0
    };

    const { error } = await supabase.from('produtos').insert(newProduct);
    if (error) throw error;

    successMessage = 'Item salvo com sucesso! Redirecionando para o itens...';
  } catch (error: any) {
    console.error('Erro ao criar produto:', error.message);
    errorMessage = `Erro ao salvar: ${error.message}`;
  }
}
---

<Layout title="Novo Item" user={user}>
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">

    <!-- ✅ Navbar -->
    <header class="bg-white/80 backdrop-blur-md border-b border-gray-200 sticky top-0 z-50">
      <div class="px-6 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-8">
            <h1 class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
              EstoquePro
            </h1>
            <Navbar user={user} currentPath={currentPath} />
          </div>
        </div>
      </div>
    </header>

    <main class="p-6">
      <div class="max-w-2xl mx-auto">

        <h2 class="text-2xl font-bold text-gray-900 mb-6">Cadastrar Novo Item</h2>

        {errorMessage && (
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6 flex items-center gap-2" role="alert">
            <svg class="w-5 h-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M18.364 5.636l-1.414 1.414L12 12l-4.95-4.95L5.636 7.05 12 13.414l6.364-6.364z" />
            </svg>
            <span>{errorMessage}</span>
          </div>
        )}

        {successMessage && (
          <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-6 flex items-center gap-2" role="alert">
            <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8.007 8.007a1 1 0 01-1.414 0L3.293 10.707a1 1 0 111.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span>{successMessage}</span>
          </div>
        )}

        {podeCadastrarItem ? (
          <form method="POST" class="bg-white rounded-2xl border border-gray-200 p-8 space-y-6" id="form-itens">

            <div>
              <label for="selected-client-name" class="block text-sm font-medium text-gray-700 mb-1">Cliente <span class="text-red-500">*</span></label>
              <div class="flex gap-2">
                <input 
                  type="text" 
                  id="selected-client-name" 
                  placeholder="Clique na lupa para buscar..." 
                  readonly 
                  class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-gray-50 cursor-pointer"
                >
                <input type="hidden" name="cliente_id" id="cliente_id" required>
                <button type="button" id="open-client-modal" class="p-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                </button>
              </div>
            </div>

            <div>
              <label for="nome" class="block text-sm font-medium text-gray-700 mb-1">Nome do Item <span class="text-red-500">*</span></label>
              <input type="text" name="nome" id="nome" required class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-blue-500 focus:outline-none">
            </div>

            <div>
              <label for="categoria" class="block text-sm font-medium text-gray-700 mb-1">Categoria <span class="text-red-500">*</span></label>
              <input type="text" name="categoria" id="categoria" required class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-blue-500 focus:outline-none">
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="estoque_atual" class="block text-sm font-medium text-gray-700 mb-1">Estoque Atual</label>
                <input type="number" name="estoque_atual" id="estoque_atual" value="0" class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-blue-500 focus:outline-none">
              </div>
              <div>
                <label for="estoque_minimo" class="block text-sm font-medium text-gray-700 mb-1">Estoque Mínimo</label>
                <input type="number" name="estoque_minimo" id="estoque_minimo" value="0" class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-blue-500 focus:outline-none">
              </div>
            </div>

            <div class="flex justify-end gap-4 pt-6 border-t border-gray-200">
              <a href="/itens" class="bg-gray-100 text-gray-700 px-6 py-3 rounded-xl hover:bg-gray-200 transition">Cancelar</a>
              <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded-xl hover:bg-blue-700 transition">Salvar Item</button>
            </div>
          </form>
        ) : (
          <div class="text-center mt-12 bg-yellow-100 text-yellow-800 border border-yellow-300 px-4 py-6 rounded-xl">
            Você não tem permissão para cadastrar novos itens.
          </div>
        )}
      </div>
    </main>

    <!-- Modal para busca de cliente -->
    <div id="client-modal" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center p-4 hidden z-50">
      <div class="bg-white rounded-2xl shadow-xl w-full max-w-lg">
        <div class="flex justify-between items-center p-6 border-b border-gray-200">
          <h3 class="text-lg font-bold text-gray-900">Buscar Cliente</h3>
          <button type="button" id="close-client-modal" class="text-gray-400 hover:text-gray-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
          </button>
        </div>
        <div class="p-6">
          <input 
            type="text" 
            id="client-search-input" 
            placeholder="Digite o nome ou CNPJ..." 
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-blue-500 focus:outline-none"
          >
          <div id="client-search-results" class="mt-4 max-h-60 overflow-y-auto space-y-2"></div>
        </div>
      </div>
    </div>
  </div>

  <script>
    import { supabase } from '../../lib/supabase';

    const openModalBtn = document.getElementById('open-client-modal');
    const closeModalBtn = document.getElementById('close-client-modal');
    const modal = document.getElementById('client-modal');
    const searchInput = document.getElementById('client-search-input');
    const searchResults = document.getElementById('client-search-results');
    const clientNameInput = document.getElementById('selected-client-name');
    const clientIdInput = document.getElementById('cliente_id');

    if (openModalBtn) {
      openModalBtn.addEventListener('click', () => {
        modal.classList.remove('hidden');
        searchInput.focus();
        performSearch('');
      });
    }

    closeModalBtn?.addEventListener('click', () => modal.classList.add('hidden'));
    modal?.addEventListener('click', (e) => {
      if (e.target === modal) modal.classList.add('hidden');
    });

    let searchTimeout;
    searchInput?.addEventListener('keyup', (e) => {
      clearTimeout(searchTimeout);
      searchTimeout = setTimeout(() => performSearch(e.target.value), 300);
    });

    async function performSearch(query) {
      searchResults.innerHTML = '<p class="text-gray-500">Buscando...</p>';
      const { data, error } = await supabase
        .from('clientes')
        .select('id, nome, cnpj')
        .or(`nome.ilike.%${query}%,cnpj.ilike.%${query}%`)
        .limit(10);

      if (error) {
        searchResults.innerHTML = '<p class="text-red-500">Erro ao buscar.</p>';
        return;
      }

      if (data.length === 0) {
        searchResults.innerHTML = '<p class="text-gray-500">Nenhum cliente encontrado.</p>';
        return;
      }

      searchResults.innerHTML = '';
      data.forEach(client => {
        const el = document.createElement('div');
        el.className = 'p-3 border rounded-lg hover:bg-gray-100 cursor-pointer';
        el.innerHTML = `<p class="font-medium">${client.nome}</p><p class="text-sm text-gray-600">${client.cnpj}</p>`;
        el.addEventListener('click', () => selectClient(client));
        searchResults.appendChild(el);
      });
    }

    function selectClient(client) {
      clientNameInput.value = client.nome;
      clientIdInput.value = client.id;
      modal.classList.add('hidden');
    }

    window.addEventListener('DOMContentLoaded', () => {
      const successBox = document.querySelector('[role="alert"].bg-green-100');
      if (successBox) {
        setTimeout(() => {
          window.location.href = '/itens';
        }, 2000);
      }
    });
  </script>
</Layout>

---
// src/pages/clientes/[id]/index.astro
import Layout from '../../../layouts/Layout.astro';
import { supabase } from '../../../lib/supabase';
import Navbar from '../../../components/Navbar.astro';

// --- VALIDAÇÃO DE USUÁRIO ---
const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/login');
}

// --- VALIDAÇÃO DE PARÂMETROS ---
const { id: clienteId } = Astro.params;
const currentPath = Astro.url.pathname;

if (!clienteId) {
  return Astro.redirect('/clientes?error=id_nao_encontrado');
}

// --- BUSCA DE DADOS DO CLIENTE COM TRATAMENTO DE ERRO ---
let cliente = null;
let produtos = [];
let errorMessage = null;

try {
  // Buscar dados do cliente
  const { data: clienteData, error: clienteError } = await supabase
    .from('clientes')
    .select('id, nome, email, telefone, endereco')
    .eq('id', clienteId)
    .single();

  if (clienteError) {
    console.error('Erro ao buscar cliente:', clienteError);
    errorMessage = 'Cliente não encontrado';
  } else {
    cliente = clienteData;
  }

  // Buscar produtos apenas se o cliente existir
  if (cliente) {
    const { data: produtosData, error: produtosError } = await supabase
      .from('produtos')
      .select('*')
      .eq('cliente_id', clienteId)
      .eq('ativo', true)
      .order('nome');

    if (produtosError) {
      console.error('Erro ao buscar produtos:', produtosError);
    } else {
      produtos = produtosData || [];
    }
  }
} catch (error) {
  console.error('Erro geral:', error);
  errorMessage = 'Erro ao carregar dados';
}

// --- REDIRECIONAMENTO SE CLIENTE NÃO EXISTIR ---
if (!cliente && !errorMessage) {
  return Astro.redirect('/clientes?error=cliente_nao_encontrado');
}

// --- FUNÇÕES AUXILIARES ---
function getStatus(stock: number, minStock: number) {
  if (stock === 0) return { text: 'Sem Estoque', color: 'text-red-600 bg-red-50' };
  if (stock <= minStock) return { text: 'Estoque Baixo', color: 'text-yellow-600 bg-yellow-50' };
  return { text: 'Em Estoque', color: 'text-green-600 bg-green-50' };
}

function formatCurrency(value: number) {
  return new Intl.NumberFormat('pt-BR', {
    style: 'currency',
    currency: 'BRL'
  }).format(value);
}
---

<Layout 
  title={cliente ? `Itens de ${cliente.nome}` : 'Cliente Não Encontrado'} 
  user={user}
>
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
    
    <!-- HEADER -->
    <header class="bg-white/80 backdrop-blur-md border-b border-gray-200 sticky top-0 z-50">
      <div class="px-6 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-8">
            <h1 class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
              EstoquePro
            </h1>
            <Navbar user={user} currentPath={currentPath} />
          </div>
        </div>
      </div>
    </header>

    <!-- CONTEÚDO PRINCIPAL -->
    <main class="p-6">
      <div class="max-w-7xl mx-auto">

        <!-- MENSAGEM DE ERRO -->
        {errorMessage && (
          <div class="mb-6 bg-red-50 border border-red-200 rounded-xl p-6">
            <div class="flex items-center gap-3">
              <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-red-800">Erro</h3>
                <p class="text-red-600">{errorMessage}</p>
              </div>
            </div>
            <div class="mt-4">
              <a 
                href="/clientes" 
                class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors text-sm font-medium"
              >
                Voltar para Clientes
              </a>
            </div>
          </div>
        )}

        <!-- SE CLIENTE NÃO EXISTIR, MOSTRAR APENAS A MENSAGEM DE ERRO -->
        {!cliente ? (
          <div class="text-center py-12">
            <p class="text-gray-500 text-lg">Cliente não encontrado</p>
          </div>
        ) : (
          <>
            <!-- BREADCRUMB -->
            <nav class="flex mb-6" aria-label="Breadcrumb">
              <ol class="flex items-center space-x-2">
                <li>
                  <a href="/clientes" class="text-gray-500 hover:text-gray-700 transition-colors">
                    Clientes
                  </a>
                </li>
                <li>
                  <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </li>
                <li>
                  <span class="text-gray-700 font-medium">{cliente.nome}</span>
                </li>
              </ol>
            </nav>

            <!-- CABEÇALHO DA PÁGINA -->
            <div class="flex items-center justify-between mb-8">
              <div>
                <h2 class="text-3xl font-bold text-gray-900">
                  Itens de {cliente.nome}
                </h2>
                <p class="text-gray-600 mt-2">
                  Todos os produtos ativos associados a este cliente
                </p>
                
                <!-- INFORMAÇÕES DO CLIENTE -->
                <div class="mt-4 flex flex-wrap gap-4 text-sm text-gray-600">
                  {cliente.email && (
                    <div class="flex items-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                      </svg>
                      {cliente.email}
                    </div>
                  )}
                  
                  {cliente.telefone && (
                    <div class="flex items-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                      </svg>
                      {cliente.telefone}
                    </div>
                  )}
                </div>
              </div>
              
              <div class="flex items-center gap-4">
                <a 
                  href="/clientes" 
                  class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-200 transition-colors font-medium"
                >
                  Voltar
                </a>
                <a 
                  href={`/itens/novo?cliente_id=${clienteId}`}
                  class="bg-blue-600 text-white px-6 py-3 rounded-xl hover:bg-blue-700 transition-colors font-medium flex items-center gap-2"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                  </svg>
                  Novo Item
                </a>
              </div>
            </div>

            <!-- TABELA DE PRODUTOS -->
            <div class="bg-white rounded-2xl shadow-sm border border-gray-200">
              
              <!-- CABEÇALHO DA TABELA -->
              <div class="p-6 border-b border-gray-200">
                <div class="flex items-center justify-between">
                  <h3 class="text-lg font-semibold text-gray-900">
                    Lista de Produtos
                    {produtos.length > 0 && (
                      <span class="text-sm font-normal text-gray-500 ml-2">
                        ({produtos.length} {produtos.length === 1 ? 'item' : 'itens'})
                      </span>
                    )}
                  </h3>
                </div>
              </div>

              <!-- TABELA -->
              <div class="overflow-x-auto">
                {produtos.length > 0 ? (
                  <table class="w-full">
                    <thead>
                      <tr class="border-b border-gray-200">
                        <th class="text-left py-4 px-6 text-sm font-medium text-gray-600">Produto</th>
                        <th class="text-left py-4 px-6 text-sm font-medium text-gray-600">Categoria</th>
                        <th class="text-left py-4 px-6 text-sm font-medium text-gray-600">Estoque</th>
                        <th class="text-left py-4 px-6 text-sm font-medium text-gray-600">Preço Venda</th>
                        <th class="text-left py-4 px-6 text-sm font-medium text-gray-600">Status</th>
                        <th class="text-left py-4 px-6 text-sm font-medium text-gray-600">Ações</th>
                      </tr>
                    </thead>
                    
                    <tbody>
                      {produtos.map((produto) => {
                        const status = getStatus(produto.estoque_atual, produto.estoque_minimo);
                        
                        return (
                          <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors">
                            
                            <!-- NOME DO PRODUTO -->
                            <td class="py-4 px-6">
                              <div class="font-medium text-gray-900">{produto.nome}</div>
                              {produto.descricao && (
                                <div class="text-sm text-gray-500 max-w-xs truncate" title={produto.descricao}>
                                  {produto.descricao}
                                </div>
                              )}
                            </td>
                            
                            <!-- CATEGORIA -->
                            <td class="py-4 px-6 text-sm text-gray-600">
                              {produto.categoria || '-'}
                            </td>
                            
                            <!-- ESTOQUE -->
                            <td class="py-4 px-6">
                              <div class="flex items-center gap-2">
                                <span class="text-sm font-medium text-gray-900">
                                  {produto.estoque_atual}
                                </span>
                                <span class="text-xs text-gray-500">
                                  {produto.unidade_medida}
                                </span>
                                {produto.estoque_atual <= produto.estoque_minimo && (
                                  <span class="text-xs text-yellow-500">
                                    (mín: {produto.estoque_minimo})
                                  </span>
                                )}
                              </div>
                            </td>
                            
                            <!-- PREÇO DE VENDA -->
                            <td class="py-4 px-6">
                              <span class="text-sm font-medium text-gray-900">
                                {produto.preco_venda ? formatCurrency(produto.preco_venda) : '-'}
                              </span>
                            </td>
                            
                            <!-- STATUS -->
                            <td class="py-4 px-6">
                              <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${status.color}`}>
                                {status.text}
                              </span>
                            </td>
                            
                            <!-- AÇÕES -->
                            <td class="py-4 px-6">
                              <div class="flex items-center gap-4">
                                <a 
                                  href={`/itens/detalhes/${produto.id}`} 
                                  class="text-blue-600 hover:text-blue-700 transition-colors text-sm font-medium flex items-center gap-1"
                                >
                                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                  </svg>
                                  Detalhes
                                </a>
                              </div>
                            </td>
                          </tr>
                        );
                      })}
                    </tbody>
                  </table>
                ) : (
                  <!-- ESTADO VAZIO -->
                  <div class="text-center py-12">
                    <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2M4 13h2m8-8V4a1 1 0 00-1-1h-2a1 1 0 00-1 1v1M9 7h6"/>
                    </svg>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Nenhum produto encontrado</h3>
                    <p class="text-gray-500 mb-6">Este cliente ainda não possui produtos cadastrados.</p>
                    <a 
                      href={`/itens/novo?cliente_id=${clienteId}`}
                      class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors font-medium inline-flex items-center gap-2"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                      </svg>
                      Adicionar Primeiro Produto
                    </a>
                  </div>
                )}
              </div>
            </div>
          </>
        )}
      </div>
    </main>
  </div>
</Layout>
---
// src/pages/entrada.astro
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';
import Navbar from '../components/Navbar.astro';

// 1. Verificação de Sessão
const { data: { session } } = await supabase.auth.getSession();
const user = session?.user;

if (!user) return Astro.redirect('/login');

// Tokens para o cliente-side (busca de clientes/produtos)
const accessToken = session.access_token;
const refreshToken = session.refresh_token;

// 2. Busca e Normalização de Perfil
const { data: userProfile } = await supabase
  .from('profiles')
  .select('role, nome')
  .eq('id', user.id)
  .single();

const userData = {
  ...user,
  profile: userProfile || { role: 'visitante', nome: 'Usuário' }
};

const userName = userProfile?.nome || 'Usuário';
const rawRole = userProfile?.role || 'visitante';
const userRole = String(rawRole).toLowerCase().replace('_', ' ').trim();
const userAvatar = userName.charAt(0).toUpperCase();
const currentPath = Astro.url.pathname;

// 3. Verificação de Permissão
const allowedRoles = ['admin', 'super admin', 'estoquista_entrada', 'estoquista entrada'];

if (!allowedRoles.includes(userRole)) {
  return Astro.redirect('/dashboard?error=acesso_negado_entrada');
}

let errorMessage: string | null = null;
let successMessage: string | null = null; // Variável para mensagem de sucesso

// 4. Lógica de POST (Registrar Entrada)
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const produto_id = formData.get('produto_id')?.toString();
    const cliente_id = formData.get('cliente_id')?.toString();
    const quantidade = Number(formData.get('quantidade'));
    const valor_unitario = Number(formData.get('valor_unitario')) || 0;
    const motivo = formData.get('motivo')?.toString() || 'Entrada manual';

    if (!produto_id || !cliente_id || !quantidade || quantidade <= 0) {
      throw new Error('Preencha todos os campos obrigatórios.');
    }

    const { error } = await supabase.rpc('registrar_movimentacao', {
      p_produto_id: produto_id,
      p_tipo: 'entrada',
      p_quantidade: quantidade,
      p_valor_unitario: valor_unitario,
      p_motivo: motivo,
      p_usuario_id: user.id,
      p_cliente_id: cliente_id
    });

    if (error) throw error;

    // SUCESSO: Define a mensagem e NÃO redireciona. 
    // O formulário será resetado naturalmente pelo recarregamento da página.
    successMessage = 'Entrada registrada com sucesso! O estoque foi atualizado.';

  } catch (error: any) {
    console.error('Erro ao registrar entrada:', error.message);
    errorMessage = `Erro ao salvar: ${error.message}`;
  }
}
---

<Layout title="Registrar Entrada" user={userData}>
  <div class="min-h-screen bg-gray-50 flex flex-col">
    
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50 px-6 py-3 shadow-sm">
      <div class="max-w-7xl mx-auto w-full flex items-center justify-between">
        <div class="flex-shrink-0 mr-6">
            <img src="https://i.ibb.co/1Gvrbvk7/ESTOQUE.png" alt="EstoquePro logo" class="h-16 w-auto" />
        </div>
        <div class="flex-grow flex justify-center">
            <Navbar user={userData} currentPath={currentPath} />
        </div>
        <div class="flex-shrink-0 relative group ml-6">
            <button class="flex items-center gap-3 focus:outline-none hover:bg-gray-50 p-2 rounded-xl transition-colors">
                <div class="text-right hidden md:block">
                    <p class="text-sm font-bold text-gray-800">{userName}</p>
                    <p class="text-[10px] font-bold text-blue-600 bg-blue-50 px-2 py-0.5 rounded-full uppercase tracking-wide border border-blue-100">
                        {userRole}
                    </p>
                </div>
                <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-full flex items-center justify-center text-white font-bold shadow-lg text-lg uppercase">
                    {userAvatar}
                </div>
            </button>
            <div class="absolute right-0 mt-2 w-56 bg-white rounded-xl shadow-xl border border-gray-100 hidden group-hover:block z-50 animate-fade-in">
                <div class="p-4 border-b border-gray-100 bg-gray-50/50 rounded-t-xl">
                    <p class="text-sm font-medium text-gray-900">{userName}</p>
                    <p class="text-xs text-gray-500 truncate">{user.email}</p>
                </div>
                <div class="p-2">
                    <form action="/api/auth/signout" method="POST">
                        <button class="w-full flex items-center gap-2 px-3 py-2 text-sm font-medium text-red-600 hover:bg-red-50 rounded-lg transition-colors">
                            Sair do Sistema
                        </button>
                    </form>
                </div>
            </div>
        </div>
      </div>
    </header>

    <main class="p-6 max-w-2xl mx-auto w-full">
        <div id="auth-data" data-access-token={accessToken} data-refresh-token={refreshToken} class="hidden"></div>

        <nav class="flex mb-6" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-2">
            <li><a href="/dashboard" class="text-gray-500 hover:text-blue-600 transition-colors">Dashboard</a></li>
            <li><svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg></li>
            <li><span class="text-gray-700 font-medium">Registrar Entrada</span></li>
          </ol>
        </nav>

        {errorMessage && (
          <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-md shadow-sm mb-6 animate-fade-in">
            <div class="flex">
                <div class="ml-3"><p class="text-sm text-red-700 font-bold">Erro ao salvar</p><p class="text-sm text-red-600">{errorMessage}</p></div>
            </div>
          </div>
        )}

        {successMessage && (
          <div class="bg-green-50 border-l-4 border-green-500 p-4 rounded-md shadow-sm mb-6 animate-fade-in">
            <div class="flex items-center gap-3">
                <svg class="h-6 w-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                <div>
                    <p class="text-sm text-green-700 font-bold">Sucesso!</p>
                    <p class="text-sm text-green-600">{successMessage}</p>
                </div>
            </div>
          </div>
        )}

        <form method="POST" class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 space-y-6">
          <div class="border-b border-gray-100 pb-4 mb-4">
              <h2 class="text-2xl font-bold text-gray-900">Nova Entrada</h2>
              <p class="text-sm text-gray-500">Registre a chegada de mercadorias.</p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Cliente <span class="text-red-500">*</span></label>
            <div class="flex gap-2">
              <input type="text" id="selected-client-name" placeholder="Clique na lupa para buscar..." readonly class="w-full border border-gray-300 rounded-lg px-3 py-2.5 bg-gray-50 text-gray-600 cursor-pointer">
              <input type="hidden" name="cliente_id" id="cliente_id">
              <button type="button" id="open-client-modal" class="p-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 shadow-sm">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
              </button>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Produto <span class="text-red-500">*</span></label>
            <select name="produto_id" id="produto_id" required disabled class="w-full border border-gray-300 rounded-lg px-3 py-2.5 bg-white disabled:bg-gray-100 disabled:text-gray-400">
              <option value="">Selecione um cliente primeiro</option>
            </select>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Quantidade <span class="text-red-500">*</span></label>
              <input type="number" name="quantidade" required value="1" min="1" class="w-full border border-gray-300 rounded-lg px-3 py-2.5">
            </div>
            <div>
               <label class="block text-sm font-medium text-gray-700 mb-1">Custo Unitário (R$)</label>
               <input type="number" name="valor_unitario" step="0.01" class="w-full border border-gray-300 rounded-lg px-3 py-2.5">
            </div>
          </div>
           
           <div>
               <label class="block text-sm font-medium text-gray-700 mb-1">Observação</label>
               <input type="text" name="motivo" placeholder="Ex: Reposição de estoque" class="w-full border border-gray-300 rounded-lg px-3 py-2.5">
           </div>

          <div class="flex items-center justify-end gap-4 mt-8 pt-6 border-t border-gray-100">
            <a href="/dashboard" class="px-6 py-2.5 bg-white border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50">Cancelar</a>
            <button type="submit" class="px-6 py-2.5 bg-blue-600 text-white font-bold rounded-lg hover:bg-blue-700 shadow-md">Confirmar Entrada</button>
          </div>
        </form>
    </main>

    <div id="client-modal" class="fixed inset-0 bg-gray-900/60 backdrop-blur-sm flex items-center justify-center p-4 hidden z-50">
      <div class="bg-white rounded-2xl shadow-2xl w-full max-w-lg">
        <div class="flex justify-between items-center p-6 border-b border-gray-100">
          <h3 class="text-lg font-bold text-gray-800">Selecionar Cliente</h3>
          <button type="button" id="close-client-modal" class="text-gray-400 hover:text-gray-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
          </button>
        </div>
        <div class="p-6">
          <input type="text" id="client-search-input" placeholder="Digite nome ou CNPJ..." class="w-full border border-gray-300 rounded-xl pl-4 pr-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500">
          <div id="client-search-results" class="mt-4 max-h-60 overflow-y-auto space-y-2 pr-1 custom-scrollbar"></div>
        </div>
      </div>
    </div>
  </div>

  <script>
    import { supabase } from '../lib/supabase';

    // Auth Token Pass
    const authData = document.getElementById('auth-data');
    if (authData && authData.dataset.accessToken) {
        supabase.auth.setSession({
            access_token: authData.dataset.accessToken,
            refresh_token: authData.dataset.refreshToken || ''
        });
    }

    const openModalBtn = document.getElementById('open-client-modal');
    const closeModalBtn = document.getElementById('close-client-modal');
    const modal = document.getElementById('client-modal');
    const searchInput = document.getElementById('client-search-input');
    const searchResults = document.getElementById('client-search-results');
    const clientNameInput = document.getElementById('selected-client-name');
    const clientIdInput = document.getElementById('cliente_id');
    const productSelect = document.getElementById('produto_id');

    openModalBtn?.addEventListener('click', () => { modal?.classList.remove('hidden'); searchInput?.focus(); performSearch(''); });
    closeModalBtn?.addEventListener('click', () => modal?.classList.add('hidden'));
    
    let searchTimeout;
    searchInput?.addEventListener('keyup', (e) => {
      clearTimeout(searchTimeout);
      searchTimeout = setTimeout(() => performSearch(e.target.value), 300);
    });

    async function performSearch(query) {
      if (!searchResults) return;
      searchResults.innerHTML = '<p class="text-gray-500 text-center py-4">Buscando...</p>';
      
      const { data, error } = await supabase
        .from('clientes')
        .select('id, nome, cnpj')
        .or(`nome.ilike.%${query}%,cnpj.ilike.%${query}%`)
        .limit(10);

      if (error) {
        searchResults.innerHTML = '<p class="text-red-500 text-center py-2">Erro ao buscar.</p>';
        return;
      }

      if (!data || data.length === 0) {
        searchResults.innerHTML = '<p class="text-gray-500 text-center py-4">Nenhum cliente encontrado.</p>';
        return;
      }

      searchResults.innerHTML = '';
      data.forEach(client => {
        const div = document.createElement('div');
        div.className = 'p-3 border border-gray-100 rounded-xl hover:bg-blue-50 cursor-pointer transition-all';
        div.innerHTML = `<p class="font-bold text-gray-800">${client.nome}</p><p class="text-xs text-gray-500">${client.cnpj || 'Sem CNPJ'}</p>`;
        div.onclick = () => {
            if (clientNameInput) clientNameInput.value = client.nome;
            if (clientIdInput) clientIdInput.value = client.id;
            modal?.classList.add('hidden');
            loadProducts(client.id);
        };
        searchResults.appendChild(div);
      });
    }

    async function loadProducts(clientId) {
        if (!productSelect) return;
        productSelect.innerHTML = '<option>Carregando...</option>';
        productSelect.disabled = true;

        const { data, error } = await supabase
            .from('produtos')
            .select('id, nome, estoque_atual')
            .eq('cliente_id', clientId)
            .eq('ativo', true)
            .order('nome');

        if (error || !data || data.length === 0) {
            productSelect.innerHTML = '<option value="">Nenhum produto encontrado</option>';
            return;
        }

        productSelect.innerHTML = '<option value="">-- Selecione o Produto --</option>';
        data.forEach(p => {
            const opt = document.createElement('option');
            opt.value = p.id;
            opt.textContent = `${p.nome} (Estoque: ${p.estoque_atual})`;
            productSelect.appendChild(opt);
        });
        productSelect.disabled = false;
    }
  </script>
</Layout>
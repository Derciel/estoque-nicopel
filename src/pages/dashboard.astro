---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';
import Navbar from '../components/Navbar.astro';

const user = Astro.locals.user;
if (!user) return Astro.redirect('/login');

const userName = user.profile?.name ?? 'Usu√°rio';
const userRole = user.profile?.role ?? 'Visitante';
const currentPath = Astro.url.pathname;

// Permiss√µes
const canSeeItens = ['admin', 'Administrador', 'Estoquista_Entrada', 'Estoquista_Saida'].includes(userRole);
const canSeeClientes = ['admin', 'Administrador', 'Estoquista_Saida', 'Estoquista_Entrada'].includes(userRole);
const canSeeEntrada = ['admin', 'Administrador', 'Estoquista_Entrada'].includes(userRole);
const canSeeSaida = ['admin', 'Administrador', 'Estoquista_Saida'].includes(userRole);
const canSeeRelatorios = ['admin', 'Administrador'].includes(userRole);
const canSeeImportacao = ['admin', 'Administrador'].includes(userRole);
const canSeeConfig = ['admin', 'Administrador'].includes(userRole);

// ========================
// üìä CONSULTAS SUPABASE
// ========================

// Total de produtos
const { count: totalProdutos } = await supabase
  .from('produtos')
  .select('*', { count: 'exact', head: true });

// Total de clientes
const { count: totalClientes } = await supabase
  .from('clientes')
  .select('*', { count: 'exact', head: true });

// Produtos abaixo do m√≠nimo
const { data: produtos } = await supabase
  .from('produtos')
  .select('id, nome, estoque_atual, estoque_minimo, ativo');

let produtosAbaixoMinimo = 0;
if (produtos) {
  produtosAbaixoMinimo = produtos.filter(
    (p) => (p.ativo ?? true) && p.estoque_atual < p.estoque_minimo
  ).length;
}

// Movimenta√ß√µes recentes
const { data: movimentacoes } = await supabase
  .from('movimentacoes')
  .select('id, tipo, quantidade, data_movimentacao, produto_id')
  .order('data_movimentacao', { ascending: false })
  .limit(10);

// Produtos para mapear nomes nas movimenta√ß√µes
const { data: produtosMap } = await supabase
  .from('produtos')
  .select('id, nome');
const produtoNome = Object.fromEntries((produtosMap || []).map(p => [p.id, p.nome]));

// Produtos recentes
const { data: produtosRecentes } = await supabase
  .from('produtos')
  .select('id, nome, categoria, estoque_atual, estoque_minimo, cliente_id, ativo')
  .order('created_at', { ascending: false })
  .limit(5);

// Clientes
const { data: clientesMap } = await supabase
  .from('clientes')
  .select('id, nome');
const clienteNome = Object.fromEntries((clientesMap || []).map(c => [c.id, c.nome]));

// Fun√ß√µes utilit√°rias
function getStatus(stock, minStock) {
  if (stock === 0) return { text: 'Sem Estoque', color: 'text-red-600 bg-red-50' };
  if (stock <= minStock) return { text: 'Estoque Baixo', color: 'text-yellow-600 bg-yellow-50' };
  return { text: 'Em Estoque', color: 'text-green-600 bg-green-50' };
}

function getTipoMovimentacao(tipo) {
  if (tipo === 'entrada') return { text: 'Entrada', color: 'text-green-600 bg-green-50' };
  return { text: 'Sa√≠da', color: 'text-red-600 bg-red-50' };
}
---

<Layout title="Dashboard" user={user}>
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">

    <!-- Navbar -->
    <header class="bg-white/80 backdrop-blur-md border-b border-gray-200 sticky top-0 z-50 w-full">
      <div class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-8">
            <h1 class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
            <img src="https://i.ibb.co/1Gvrbvk7/ESTOQUE.png" alt="EstoquePro logo" class="h-20 w-auto mr-4" />
            </h1>
            <Navbar user={user} currentPath={currentPath} />
          </div>
        </div>
      </div>
    </header>

    <main class="p-6">
      <div class="max-w-7xl mx-auto">

        <!-- Banner -->
        <div class="bg-gradient-to-r from-blue-500 to-purple-600 rounded-2xl p-6 text-white mb-8 shadow-lg">
          <div class="flex items-center justify-between">
            <div>
              <h2 class="text-2xl font-bold mb-2">üëã Bem-vindo, {userName}!</h2>
              <p class="opacity-90">Aqui est√° o resumo do seu estoque hoje</p>
            </div>
            <div class="hidden md:block bg-white/20 rounded-lg px-4 py-2 backdrop-blur-sm">
              <p class="text-sm">Seu papel: <span class="font-semibold">{userRole}</span></p>
            </div>
          </div>
        </div>

        <!-- Cards de m√©tricas -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
          
          <!-- Total Produtos -->
          <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-600 text-sm font-medium">Total de Produtos</p>
                <p class="text-3xl font-bold text-gray-900 mt-2">{totalProdutos || 0}</p>
              </div>
              <div class="p-3 bg-blue-50 rounded-xl">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M3 7h18M3 12h18M3 17h18M4 4h16a1 1 0 011 1v14a1 1 0 01-1 1H4a1 1 0 01-1-1V5a1 1 0 011-1z"/>
                </svg>
              </div>
            </div>
          </div>

          <!-- Total Clientes -->
          <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-600 text-sm font-medium">Total de Clientes</p>
                <p class="text-3xl font-bold text-gray-900 mt-2">{totalClientes || 0}</p>
              </div>
              <div class="p-3 bg-green-50 rounded-xl">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M17 20h5v-2a3 3 0 00-5.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M12 7a3 3 0 110-6 3 3 0 010 6z"/>
                </svg>
              </div>
            </div>
          </div>

          <!-- Abaixo do M√≠nimo -->
          <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-600 text-sm font-medium">Produtos Abaixo do M√≠nimo</p>
                <p class="text-3xl font-bold text-red-500 mt-2">{produtosAbaixoMinimo}</p>
              </div>
              <div class="p-3 bg-red-50 rounded-xl">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M10.29 3.86L1.82 18a1 1 0 00.91 1.5h18.54a1 1 0 00.91-1.5L13.71 3.86a1 1 0 00-1.82 0zM12 9v4m0 4h.01"/>
                </svg>
              </div>
            </div>
          </div>

          <!-- Movimenta√ß√µes -->
          <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-600 text-sm font-medium">Novas Movimenta√ß√µes</p>
                <p class="text-3xl font-bold text-gray-900 mt-2">{movimentacoes?.length || 0}</p>
              </div>
              <div class="p-3 bg-yellow-50 rounded-xl">
                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 8v8m4-4H8m12-6h-2a2 2 0 00-2-2H8a2 2 0 00-2 2H4"/>
                </svg>
              </div>
            </div>
          </div>
        </div>

        <!-- Produtos Recentes -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200 mb-8">
          <div class="p-6 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg font-semibold text-gray-900">Produtos Recentes</h3>
            {canSeeItens && <a href="/itens" class="text-blue-600 hover:text-blue-700 text-sm font-medium">Ver todos ‚Üí</a>}
          </div>
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b border-gray-200">
                  <th class="py-4 px-6 text-left text-sm text-gray-600">Produto</th>
                  <th class="py-4 px-6 text-left text-sm text-gray-600">Cliente</th>
                  <th class="py-4 px-6 text-left text-sm text-gray-600">Estoque</th>
                  <th class="py-4 px-6 text-left text-sm text-gray-600">Status</th>
                </tr>
              </thead>
              <tbody>
                {produtosRecentes?.length > 0 ? produtosRecentes.map(p => {
                  const status = getStatus(p.estoque_atual, p.estoque_minimo);
                  return (
                    <tr class="border-b border-gray-100 hover:bg-gray-50 transition">
                      <td class="py-4 px-6 font-medium text-gray-900">{p.nome}</td>
                      <td class="py-4 px-6 text-gray-600">{clienteNome[p.cliente_id] || 'N/A'}</td>
                      <td class="py-4 px-6 text-gray-900">{p.estoque_atual}</td>
                      <td class="py-4 px-6">
                        <span class={`px-2 py-1 rounded-full text-xs font-medium ${status.color}`}>{status.text}</span>
                      </td>
                    </tr>
                  );
                }) : (
                  <tr><td colspan="4" class="py-6 text-center text-gray-500">Nenhum produto encontrado</td></tr>
                )}
              </tbody>
            </table>
          </div>
        </div>

        <!-- Atividades Recentes -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200">
          <div class="p-6 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Atividade Recente</h3>
          </div>
          <div class="p-6 space-y-4">
            {movimentacoes?.length > 0 ? movimentacoes.map(m => {
              const tipo = getTipoMovimentacao(m.tipo);
              return (
                <div class="flex items-center gap-3">
                  <div class={`p-2 rounded-lg ${m.tipo === 'entrada' ? 'bg-green-100' : 'bg-red-100'}`}>
                    <svg class={`w-4 h-4 ${m.tipo === 'entrada' ? 'text-green-600' : 'text-red-600'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      {m.tipo === 'entrada'
                        ? <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v12m0 0l6-6m-6 6l-6-6"/>
                        : <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v12m0 0l-6-6m6 6l6-6"/>}
                    </svg>
                  </div>
                  <div class="flex-1">
                    <p class="text-sm font-medium text-gray-900">{produtoNome[m.produto_id] || 'Produto desconhecido'}</p>
                    <p class="text-xs text-gray-500">
                      {m.tipo === 'entrada' ? 'Entrada' : 'Sa√≠da'} de {m.quantidade} unidades
                    </p>
                  </div>
                  <span class={`px-2 py-1 rounded-full text-xs font-medium ${tipo.color}`}>{tipo.text}</span>
                </div>
              );
            }) : (
              <p class="text-gray-500 text-sm text-center">Nenhuma movimenta√ß√£o recente</p>
            )}
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>

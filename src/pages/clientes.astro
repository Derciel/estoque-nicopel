---
// src/pages/clientes.astro
import Layout from '../layouts/Layout.astro';
import { supabase } from '$lib/supabase';
import Navbar from '../components/Navbar.astro';
import '../styles/global.css';

// Autenticação
const user = Astro.locals.user;
if (!user) return Astro.redirect('/login');

// --- DADOS DO USUÁRIO ---
const userName = user.profile?.name ?? 'Admin';
const userRole = user.profile?.role ?? 'Visitante';
const userAvatar = userName.charAt(0).toUpperCase() || '#';
const currentPath = Astro.url.pathname;

// --- PERMISSÕES (CORRIGIDAS) ---
// ✅ CORRIGIDO: Trocado 'admin' por 'Administrador'
const canSeeItens = ['Administrador', 'Estoquista_Entrada', 'Estoquista_Saida'].includes(userRole);
const canSeeClientes = ['Administrador', 'Estoquista_Saida', 'Estoquista_Entrada'].includes(userRole);
const canSeeEntrada = ['Administrador', 'Estoquista_Entrada'].includes(userRole);
const canSeeSaida = ['Administrador', 'Estoquista_Saida'].includes(userRole);
const canSeeRelatorios = ['Administrador'].includes(userRole);
const canSeeImportacao = ['Administrador'].includes(userRole);
const canSeeConfig = ['Administrador'].includes(userRole);

// Consulta de clientes
const { data: clientes, error: errorClientes } = await supabase
  .from('clientes')
  .select('id, nome, cnpj, email, telefone')
  .order('nome');

if (errorClientes) console.error('Erro ao carregar clientes:', errorClientes);
---

<Layout title="Clientes" user={user}>
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">

        <header class="bg-white/80 backdrop-blur-md border-b border-gray-200 sticky top-0 z-50 w-full">
      <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
        <div class="flex items-center gap-8">
          <img src="https://i.ibb.co/1Gvrbvk7/ESTOQUE.png" alt="EstoquePro logo" class="h-20 w-auto mr-4" />
                    <Navbar user={user} currentPath={currentPath} />
        </div>

        <div class="relative" id="profile-menu-container">
          <button id="profile-menu-button" class="flex items-center gap-3 cursor-pointer">
            <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center shadow-lg">
              <span class="text-white text-sm font-medium">{userAvatar}</span>
            </div>
            <div class="hidden sm:block text-left">
              <p class="text-sm font-medium text-gray-900">{userName}</p>
              <p class="text-xs text-gray-500">{userRole}</p>
            </div>
          </button>

          <div id="profile-menu-dropdown" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-xl shadow-lg border border-gray-200 py-1 z-50">
            <div class="px-4 py-2 border-b border-gray-100">
              <p class="text-sm font-medium text-gray-900 truncate">{userName}</p>
              <p class="text-xs text-gray-500 truncate">{user.email}</p>
            </div>
            <a href="/api/auth/signout" class="flex items-center gap-3 px-4 py-2 text-sm text-red-600 hover:bg-red-50">
              <span>Sair</span>
            </a>
          </div>
        </div>
      </div>
    </header>

    <main class="p-6">
      <div class="max-w-7xl mx-auto">
                <div class="flex items-center justify-between mb-8">
          <div>
            <h2 class="text-3xl font-bold text-gray-900">Gerenciar Clientes</h2>
            <p class="text-gray-600 mt-2">Lista de todos os clientes cadastrados</p>
          </div>
          <a href="/clientes/novo" class="bg-blue-600 text-white px-6 py-3 rounded-xl hover:bg-blue-700 transition flex items-center gap-2 font-medium">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v12m6-6H6" />
            </svg>
            Novo Cliente
          </a>
        </div>

        <div class="bg-white rounded-2xl shadow-sm border border-gray-200">
          <div class="p-6 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Lista de Clientes</h3>
          </div>

          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b border-gray-200">
                  <th class="text-left py-4 px-6 text-sm font-medium text-gray-600">Cliente</th>
                  <th class="text-left py-4 px-6 text-sm font-medium text-gray-600">CNPJ / Telefone</th>
                  <th class="text-left py-4 px-6 text-sm font-medium text-gray-600">Ações</th>
                </tr>
              </thead>
              <tbody>
                {clientes && clientes.length > 0 ? clientes.map(cliente => (
                  <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors">
                    <td class="py-4 px-6">
                      <div class="font-medium text-gray-900">{cliente.nome}</div>
                      <div class="text-sm text-gray-500">{cliente.email || 'Sem email'}</div>
                  _ </td>
                    <td class="py-4 px-6">
                      <div class="font-medium text-gray-900">{cliente.cnpj}</div>
                      <div class="text-sm text-gray-500">{cliente.telefone || 'Sem telefone'}</div>
                    </td>
                    <td class="py-4 px-6">
                      <div class="flex items-center gap-4">
                    	  <a href={`/clientes/detalhes/${cliente.id}`} class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                    	    Ver Itens
                  	    </a>
                        <a href={`/clientes/editar/${cliente.id}`} class="text-blue-600 hover:text-blue-700" title="Editar Cliente">
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                          </svg>
                        </a>
                      </div>
                	  </td>
                  </tr>
                )) : (
                  <tr>
                    <td colspan="3" class="py-8 px-6 text-center text-gray-500">Nenhum cliente encontrado</td>
                  </tr>
                )}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </div>

    <script>
    function initProfileDropdown() {
      const btn = document.getElementById('profile-menu-button');
      const menu = document.getElementById('profile-menu-dropdown');
      const container = document.getElementById('profile-menu-container');

      if (btn && menu && container) {
        btn.addEventListener('click', () => menu.classList.toggle('hidden'));
        document.addEventListener('click', (e) => {
          if (!container.contains(e.target)) menu.classList.add('hidden');
        }, true);
      }
    }
    
    initProfileDropdown();
    document.addEventListener('astro:page-load', initProfileDropdown);
  </script>
</Layout>
---
// src/pages/itens.astro
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';
import Navbar from '../components/Navbar.astro';
import '../styles/global.css';

// 1. Verifica√ß√£o de Seguran√ßa
const { data: { user } } = await supabase.auth.getUser();
if (!user) return Astro.redirect('/login');

// Busca perfil para garantir o role
const { data: userProfile } = await supabase.from('profiles').select('role, nome').eq('id', user.id).single();

// Objeto de usu√°rio completo para a Navbar
const userData = {
  ...user,
  profile: userProfile || { role: 'visitante', nome: 'Usu√°rio' }
};

const userName = userProfile?.nome || 'Usu√°rio';
const userRole = String(userProfile?.role || 'visitante').toLowerCase().replace('_', ' ').trim();
const userAvatar = userName.charAt(0).toUpperCase();
const currentPath = Astro.url.pathname;

// 2. Permiss√µes
const admins = ['admin', 'super admin'];
const canSeeItens = ['estoquista_entrada', 'estoquista_saida', ...admins].includes(userRole);

if (!canSeeItens) return Astro.redirect('/dashboard?error=acesso_negado');

// ==========================================
// üìä L√ìGICA DE DADOS (AGRUPADO POR CLIENTE)
// ==========================================

// 1. Buscar Clientes (Ordenados por nome)
const { data: clientesData } = await supabase
  .from('clientes')
  .select('id, nome, cnpj')
  .order('nome', { ascending: true });

// 2. Buscar Produtos
const { data: produtosData } = await supabase
  .from('produtos')
  .select('*')
  .order('nome', { ascending: true });

// 3. Agrupar Produtos por Cliente
// Cria um objeto onde a chave √© o ID do cliente
const catalogoPorCliente = {};

if (clientesData && produtosData) {
    // Inicializa o grupo para cada cliente
    clientesData.forEach(cliente => {
        catalogoPorCliente[cliente.id] = {
            info: cliente,
            produtos: []
        };
    });

    // Distribui os produtos nas "caixas" dos clientes
    produtosData.forEach(produto => {
        if (catalogoPorCliente[produto.cliente_id]) {
            catalogoPorCliente[produto.cliente_id].produtos.push(produto);
        }
    });
}

// Filtra apenas clientes que t√™m produtos (Opcional: remova o filter se quiser ver clientes vazios)
const listaExibicao = Object.values(catalogoPorCliente).filter((grupo: any) => grupo.produtos.length > 0);


// 4. Fun√ß√£o de Status (CSS CORRIGIDO - Retorna classes Tailwind)
function getStatus(stock, minStock) {
  if (stock === 0) {
    return { 
        text: 'Sem Estoque', 
        classes: 'bg-red-100 text-red-700 border border-red-200' 
    };
  }
  if (stock <= minStock) {
    return { 
        text: 'Estoque Baixo', 
        classes: 'bg-yellow-100 text-yellow-700 border border-yellow-200' 
    };
  }
  return { 
    text: 'Em Estoque', 
    classes: 'bg-green-100 text-green-700 border border-green-200' 
  };
}
---

<Layout title="Itens e Estoque" user={userData}>
  <div class="min-h-screen bg-gray-50 flex flex-col">

    <header class="bg-white border-b border-gray-200 sticky top-0 z-50 px-6 py-3 shadow-sm">
      <div class="max-w-7xl mx-auto w-full flex items-center justify-between">
        
        <div class="flex-shrink-0 mr-6">
            <img src="https://i.ibb.co/1Gvrbvk7/ESTOQUE.png" alt="EstoquePro logo" class="h-16 w-auto" />
        </div>

        <div class="flex-grow flex justify-center">
            <Navbar user={userData} currentPath={currentPath} />
        </div>
        
        <div class="flex-shrink-0 relative group ml-6">
            <button class="flex items-center gap-3 focus:outline-none hover:bg-gray-50 p-2 rounded-xl transition-colors">
                <div class="text-right hidden md:block">
                    <p class="text-sm font-bold text-gray-800">{userName}</p>
                    <p class="text-[10px] font-bold text-blue-600 bg-blue-50 px-2 py-0.5 rounded-full uppercase tracking-wide border border-blue-100">
                        {userRole}
                    </p>
                </div>
                <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-full flex items-center justify-center text-white font-bold shadow-lg text-lg uppercase">
                    {userAvatar}
                </div>
            </button>
            
            <div class="absolute right-0 mt-2 w-56 bg-white rounded-xl shadow-xl border border-gray-100 hidden group-hover:block z-50 animate-fade-in">
                <div class="p-4 border-b border-gray-100 bg-gray-50/50 rounded-t-xl">
                    <p class="text-sm font-medium text-gray-900">{userName}</p>
                    <p class="text-xs text-gray-500 truncate">{user.email}</p>
                </div>
                <div class="p-2">
                    <form action="/api/auth/signout" method="POST">
                        <button class="w-full flex items-center gap-2 px-3 py-2 text-sm font-medium text-red-600 hover:bg-red-50 rounded-lg transition-colors">
                            Sair do Sistema
                        </button>
                    </form>
                </div>
            </div>
        </div>
      </div>
    </header>

    <main class="p-6 max-w-7xl mx-auto w-full space-y-8">

      <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h2 class="text-3xl font-bold text-gray-900">Cat√°logo de Itens</h2>
            <p class="text-gray-500 mt-1">Gerencie o estoque organizado por cliente.</p>
        </div>
        <a href="/itens/novo" class="bg-blue-600 text-white px-5 py-3 rounded-xl hover:bg-blue-700 transition shadow-md hover:shadow-lg flex items-center gap-2 font-bold">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v12m6-6H6" /></svg>
            Novo Item
        </a>
      </div>

      <div class="space-y-8">
        {listaExibicao.length > 0 ? (
            listaExibicao.map((grupo: any) => (
                <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
                    
                    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200 flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div class="p-2 bg-blue-100 text-blue-600 rounded-lg">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
                            </div>
                            <div>
                                <h3 class="text-lg font-bold text-gray-800">{grupo.info.nome}</h3>
                                <p class="text-xs text-gray-500 font-mono">{grupo.info.cnpj || 'Sem CNPJ'}</p>
                            </div>
                        </div>
                        <span class="text-xs font-bold bg-white border border-gray-200 px-3 py-1 rounded-full text-gray-600">
                            {grupo.produtos.length} Itens
                        </span>
                    </div>

                    <div class="overflow-x-auto">
                        <table class="w-full text-left text-sm">
                            <thead class="bg-white text-gray-500 border-b border-gray-100">
                                <tr>
                                    <th class="px-6 py-3 font-medium">Produto</th>
                                    <th class="px-6 py-3 font-medium">Estoque Atual</th>
                                    <th class="px-6 py-3 font-medium">M√≠nimo</th>
                                    <th class="px-6 py-3 font-medium">Status</th>
                                    <th class="px-6 py-3 font-medium text-right">A√ß√µes</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-50">
                                {grupo.produtos.map((produto) => {
                                    const status = getStatus(produto.estoque_atual, produto.estoque_minimo);
                                    return (
                                        <tr class="hover:bg-blue-50/50 transition-colors group">
                                            <td class="px-6 py-4 font-semibold text-gray-900">
                                                {produto.nome}
                                            </td>
                                            <td class="px-6 py-4">
                                                <span class="font-mono text-gray-700 bg-gray-100 px-2 py-1 rounded border border-gray-200">
                                                    {produto.estoque_atual} {produto.unidade_medida}
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 text-gray-500">
                                                {produto.estoque_minimo}
                                            </td>
                                            <td class="px-6 py-4">
                                                <span class={`px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide inline-block ${status.classes}`}>
                                                    {status.text}
                                                </span>
                                            </td>
                                            <td class="px-6 py-4 text-right">
                                                <div class="flex justify-end gap-3 opacity-60 group-hover:opacity-100 transition-opacity">
                                                    <a href={`/itens/editar/${produto.id}`} class="text-blue-600 hover:text-blue-800 font-medium text-xs border border-blue-200 hover:bg-blue-50 px-2 py-1 rounded">
                                                        Editar
                                                    </a>
                                                    <form method="POST" action="/api/itens/excluir" onsubmit="return confirm('Tem certeza?');" style="display:inline;">
                                                        <input type="hidden" name="id" value={produto.id} />
                                                        <button class="text-red-600 hover:text-red-800 font-medium text-xs border border-red-200 hover:bg-red-50 px-2 py-1 rounded">
                                                            Excluir
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    );
                                })}
                            </tbody>
                        </table>
                    </div>
                </div>
            ))
        ) : (
            <div class="text-center py-20 bg-white rounded-2xl border border-gray-200 border-dashed">
                <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/></svg>
                <h3 class="text-lg font-medium text-gray-900">Estoque Vazio</h3>
                <p class="text-gray-500">Nenhum item cadastrado no momento.</p>
            </div>
        )}
      </div>

    </main>
  </div>
</Layout>
---
import Layout from '../layouts/Layout.astro';
import { supabase } from '$lib/supabase';
import Navbar from '../components/Navbar.astro';
import { getStockStatus } from '../utils/status.ts';

// Autenticação
const user = Astro.locals.user;
if (!user) return Astro.redirect('/login');

const userName = user.profile?.name ?? 'Usuário';
const userRole = user.profile?.role ?? 'Visitante';
const userAvatar = userName.charAt(0).toUpperCase();
const currentPath = Astro.url.pathname;

// Permissões padrão
const canSeeItens = ['admin', 'Administrador', 'Estoquista_Entrada', 'Estoquista_Saida'].includes(userRole);

// Consulta de produtos
const { data: produtosData, error: errorProdutos } = await supabase
  .from('produtos')
  .select('*')
  .order('nome', { ascending: true });

if (errorProdutos) console.error('Erro ao carregar produtos:', errorProdutos);

// Consulta de clientes
const { data: clientesData, error: errorClientes } = await supabase
  .from('clientes')
  .select('id, nome, cnpj');

if (errorClientes) console.error('Erro ao carregar clientes:', errorClientes);

// Mapeamento de clientes
const clientesMap = Object.fromEntries(
  (clientesData || []).map(c => [c.id, { nome: c.nome, cnpj: c.cnpj }])
);

// Função de status do estoque simplificada (CORRIGIDA)
function getStatus(stock, minStock) {
  const baseClasses = 'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium';

  if (stock === 0) return { 
    text: 'Sem Estoque', 
    color: `${baseClasses} text-red-600 bg-red-50 border border-red-200`
  };

  if (stock <= minStock) return { 
    text: 'Estoque Baixo', 
    color: `${baseClasses} text-yellow-600 bg-yellow-50 border border-yellow-200`
  };

  return { 
    text: 'Em Estoque', 
    color: `${baseClasses} text-green-600 bg-green-50 border border-green-200`
  };
}

---

<Layout title="Itens" user={user}>
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">

    <!-- Navbar -->
    <header class="bg-white/80 backdrop-blur-md border-b border-gray-200 sticky top-0 z-50 w-full">
      <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
        <div class="flex items-center gap-8">
          <img src="https://i.ibb.co/1Gvrbvk7/ESTOQUE.png" alt="EstoquePro logo" class="h-20 w-auto mr-4" />
          <Navbar user={user} currentPath={currentPath} />
        </div>
        <div class="relative" id="profile-menu-container">
          <button id="profile-menu-button" class="flex items-center gap-3 cursor-pointer">
            <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center shadow-lg">
              <span class="text-white text-sm font-medium">{userAvatar}</span>
            </div>
            <div class="hidden sm:block text-left">
              <p class="text-sm font-medium text-gray-900">{userName}</p>
              <p class="text-xs text-gray-500">{userRole}</p>
            </div>
          </button>
          <div id="profile-menu-dropdown" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-xl shadow-lg border border-gray-200 py-1 z-50">
            <div class="px-4 py-2 border-b border-gray-100">
              <p class="text-sm font-medium text-gray-900 truncate">{userName}</p>
              <p class="text-xs text-gray-500 truncate">{user.email}</p>
            </div>
            <a href="/api/auth/signout" class="flex items-center gap-3 px-4 py-2 text-sm text-red-600 hover:bg-red-50">
              <span>Sair</span>
            </a>
          </div>
        </div>
      </div>
    </header>

    <main class="p-6">
      <div class="max-w-7xl mx-auto">

        <div class="flex items-center justify-between mb-8">
          <div>
            <h2 class="text-3xl font-bold text-gray-900">Gerenciar Itens</h2>
            <p class="text-gray-600 mt-2">Visualize todos os produtos ativos no estoque</p>
          </div>
          <a href="/itens/novo" class="bg-blue-600 text-white px-6 py-3 rounded-xl hover:bg-blue-700 transition flex items-center gap-2 font-medium">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v12m6-6H6" />
            </svg>
            Novo Item
          </a>
        </div>

        <!-- Tabela de Itens -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200">
          <div class="p-6 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg font-semibold text-gray-900">Lista de Produtos</h3>
          </div>
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b border-gray-200 bg-gray-50">
                  <th class="py-4 px-6 text-left text-sm font-medium text-gray-600">Produto</th>
                  <th class="py-4 px-6 text-left text-sm font-medium text-gray-600">Cliente</th>
                  <th class="py-4 px-6 text-left text-sm font-medium text-gray-600">Estoque</th>
                  <th class="py-4 px-6 text-left text-sm font-medium text-gray-600">Mínimo</th>
                  <th class="py-4 px-6 text-left text-sm font-medium text-gray-600">Status</th>
                  <th class="py-4 px-6 text-left text-sm font-medium text-gray-600">Ações</th>
                </tr>
              </thead>
              <tbody>
                {produtosData && produtosData.length > 0 ? produtosData.map((produto) => {
                  const status = getStatus(produto.estoque_atual, produto.estoque_minimo);
                  const cliente = clientesMap[produto.cliente_id];
                  return (
                    <tr class="border-b border-gray-100 hover:bg-gray-50 transition">
                      <td class="py-4 px-6 font-medium text-gray-900">{produto.nome}</td>
                      <td class="py-4 px-6">
                        {cliente ? (
                          <span class="font-medium text-gray-900">{cliente.nome}</span>
                        ) : (
                          <span class="text-gray-400">N/A</span>
                        )}
                      </td>
                      <td class="py-4 px-6 text-sm text-gray-800">{produto.estoque_atual} {produto.unidade_medida}</td>
                      <td class="py-4 px-6 text-sm text-gray-800">{produto.estoque_minimo}</td>
                      <td class="py-4 px-6">
                      <span class={status.color.toString()}>
                          {status.text}
                      </span>
                      </td>
                      <td class="py-4 px-6">
                          <a href={`/itens/excluir/${produto.id}`} title="Excluir Item" class="text-red-600 hover:text-red-800 transition">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                          </a>
                        </a>
                      </td>
                    </tr>
                  );
                }) : (
                  <tr>
                    <td colspan="6" class="py-8 px-6 text-center text-gray-500">
                      Nenhum produto encontrado
                    </td>
                  </tr>
                )}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
    <script>
      const menuButton = document.getElementById('profile-menu-button');
      const menuDropdown = document.getElementById('profile-menu-dropdown');
      const menuContainer = document.getElementById('profile-menu-container');
      if (menuButton && menuDropdown && menuContainer) {
        menuButton.addEventListener('click', () => {
          menuDropdown.classList.toggle('hidden');
        });
        document.addEventListener('click', (event) => {
          if (!menuContainer.contains(event.target)) {
            menuDropdown.classList.add('hidden');
          }
        });
      }
    </script>
  </div>
</Layout>

---
import Layout from '../layouts/Layout.astro';
import { supabase } from '$lib/supabase';
import Navbar from '../components/Navbar.astro';

const user = Astro.locals.user;
if (!user) return Astro.redirect('/login');

let errorMessage: string | null = null;
let successMessage: string | null = Astro.url.searchParams.get('success');

const userName = user.profile?.name ?? 'Usu√°rio';
const userRole = user.profile?.role ?? 'Visitante';
const userAvatar = userName.charAt(0).toUpperCase() || '#';
const currentPath = Astro.url.pathname;

// ‚úÖ POST - Registrar Sa√≠da
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const produto_id = formData.get('produto_id')?.toString();
    const cliente_id = formData.get('cliente_id')?.toString();
    const quantidade = Number(formData.get('quantidade'));
    const valor_unitario = Number(formData.get('valor_venda')) || 0;
    const motivo = formData.get('motivo')?.toString() || 'Sa√≠da manual';

    if (!produto_id || !cliente_id || !quantidade || quantidade <= 0) {
      throw new Error('Cliente, Produto e Quantidade (maior que zero) s√£o obrigat√≥rios.');
    }

    const { error } = await supabase.rpc('registrar_movimentacao', {
      p_produto_id: produto_id,
      p_tipo: 'saida',
      p_quantidade: quantidade,
      p_valor_unitario: valor_unitario,
      p_motivo: motivo,
      p_usuario_id: user.id,
      p_cliente_id: cliente_id
    });

    if (error) throw error;

    return Astro.redirect('/dashboard?success=Sa√≠da registrada com sucesso!');

  } catch (error: any) {
    errorMessage = `Erro ao salvar: ${error.message}`;
  }
}
---

<Layout title="Registrar Sa√≠da" user={user}>
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">

    <!-- ‚úÖ NAVBAR UNIFICADA -->
    <header class="bg-white/80 backdrop-blur-md border-b border-gray-200 sticky top-0 z-50 w-full">
      <div class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-8">
          <img src=https://i.ibb.co/1Gvrbvk7/ESTOQUE.png" alt="EstoquePro logo" class="h-20 w-auto mr-4" />
            </h1>

            <!-- ‚úÖ Navbar Reutiliz√°vel -->
            <Navbar user={user} currentPath={currentPath} />
          </div>

          <!-- ‚úÖ Perfil com Dropdown -->
          <div class="relative" id="profile-menu-container">
            <button id="profile-menu-button" class="flex items-center gap-3 cursor-pointer">
              <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center shadow-lg">
                <span class="text-white text-sm font-medium">{userAvatar}</span>
              </div>
              <div class="hidden sm:block">
                <p class="text-sm font-medium text-gray-900">{userName}</p>
                <p class="text-xs text-gray-500">{userRole}</p>
              </div>
            </button>

            <div id="profile-menu-dropdown" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-xl shadow-lg border border-gray-200 py-1 z-50">
              <div class="px-4 py-2 border-b border-gray-100">
                <p class="text-sm font-medium text-gray-900 truncate">{userName}</p>
                <p class="text-xs text-gray-500 truncate">{user.email}</p>
              </div>
              <a href="/api/auth/signout" class="flex items-center gap-3 px-4 py-2 text-sm text-red-600 hover:bg-red-50">
                <span>Sair</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </header>

    <main class="p-6">
      <div class="max-w-2xl mx-auto">

        <nav class="flex mb-6" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-2">
            <li>
              <a href="/dashboard" class="text-gray-500 hover:text-gray-700">Dashboard</a>
            </li>
            <li>
              <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
            </li>
            <li>
              <span class="text-gray-700 font-medium">Registrar Sa√≠da</span>
            </li>
          </ol>
        </nav>

        {errorMessage && (
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6">
            <strong>Ops! </strong>{errorMessage}
          </div>
        )}

        <form method="POST" class="bg-white rounded-2xl shadow-sm border border-gray-200 p-8 space-y-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Registrar Sa√≠da de Estoque</h2>

          <!-- Cliente -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Cliente <span class="text-red-500">*</span></label>
            <div class="flex gap-2">
              <input type="text" id="selected-client-name" readonly placeholder="Clique na lupa..." 
                class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-gray-50 cursor-pointer">
              <input type="hidden" name="cliente_id" id="cliente_id">
              <button type="button" id="open-client-modal" class="p-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                üîç
              </button>
            </div>
          </div>

          <!-- Produto -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Produto <span class="text-red-500">*</span></label>
            <select name="produto_id" id="produto_id" required disabled class="w-full border border-gray-300 rounded-lg px-3 py-2 disabled:bg-gray-100">
              <option value="">Selecione um cliente primeiro</option>
            </select>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Quantidade <span class="text-red-500">*</span></label>
              <input type="number" name="quantidade" id="quantidade" min="1" value="1" required 
                class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-blue-500">
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Motivo</label>
            <input type="text" name="motivo" id="motivo" placeholder="Ex: Venda, Perda..."
              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-blue-500">
          </div>

          <div class="flex items-center justify-end gap-4 mt-8 pt-6 border-t">
            <a href="/dashboard" class="bg-gray-100 px-6 py-3 rounded-xl hover:bg-gray-200 font-medium text-gray-700">
              Cancelar
            </a>
            <button type="submit" class="bg-blue-600 px-6 py-3 rounded-xl text-white hover:bg-blue-700 font-medium">
              Registrar Sa√≠da
            </button>
          </div>
        </form>

      </div>
    </main>

    <!-- Modal de Cliente -->
    <div id="client-modal" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center p-4 hidden">
      <div class="bg-white rounded-2xl shadow-xl w-full max-w-lg">
        <div class="flex justify-between items-center p-6 border-b">
          <h3 class="text-lg font-bold">Buscar Cliente</h3>
          <button id="close-client-modal" class="text-gray-400 hover:text-gray-600">‚úñ</button>
        </div>
        <div class="p-6">
          <input type="text" id="client-search-input" placeholder="Nome ou CNPJ..." 
            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-blue-500">
          <div id="client-search-results" class="mt-4 max-h-60 overflow-y-auto space-y-2"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Script de Modal, Busca e Dropdown -->
  <script>
    import { supabase } from '../lib/supabase';

    const openModalBtn = document.getElementById('open-client-modal');
    const closeModalBtn = document.getElementById('close-client-modal');
    const modal = document.getElementById('client-modal');
    const searchInput = document.getElementById('client-search-input');
    const searchResults = document.getElementById('client-search-results');
    const clientNameInput = document.getElementById('selected-client-name');
    const clientIdInput = document.getElementById('cliente_id');
    const productSelect = document.getElementById('produto_id');

    openModalBtn.onclick = () => {
      modal.classList.remove('hidden');
      searchInput.focus();
      performSearch('');
    };
    closeModalBtn.onclick = () => modal.classList.add('hidden');

    modal.onclick = (e) => {
      if (e.target === modal) modal.classList.add('hidden');
    };

    let searchTimeout;
    searchInput.onkeyup = (e) => {
      clearTimeout(searchTimeout);
      searchTimeout = setTimeout(() => performSearch(e.target.value), 300);
    };

    async function performSearch(query) {
      const { data, error } = await supabase
        .from('clientes')
        .select('id, nome, cnpj')
        .or(`nome.ilike.%${query}%,cnpj.ilike.%${query}%`)
        .limit(10);

      if (!data || data.length === 0) {
        searchResults.innerHTML = '<p class="text-gray-500">Nenhum cliente encontrado.</p>';
        return;
      }

      searchResults.innerHTML = '';
      data.forEach(client => {
        const el = document.createElement('div');
        el.className = 'p-3 border rounded-lg hover:bg-gray-100 cursor-pointer';
        el.innerHTML = `<p class="font-medium">${client.nome}</p><p class="text-sm text-gray-600">${client.cnpj}</p>`;
        el.onclick = () => selectClient(client);
        searchResults.appendChild(el);
      });
    }

    function selectClient(client) {
      clientNameInput.value = client.nome;
      clientIdInput.value = client.id;
      modal.classList.add('hidden');
      loadProductsForClient(client.id);
    }

    async function loadProductsForClient(clientId) {
      productSelect.innerHTML = '<option>Carregando...</option>';
      productSelect.disabled = true;

      const { data } = await supabase
        .from('produtos')
        .select('id, nome, estoque_atual')
        .eq('cliente_id', clientId)
        .eq('ativo', true)
        .order('nome');

      if (!data || data.length === 0) {
        productSelect.innerHTML = '<option>Nenhum produto deste cliente</option>';
        return;
      }

      productSelect.innerHTML = '<option value="">-- Selecione um produto --</option>';
      data.forEach(p => {
        const opt = document.createElement('option');
        opt.value = p.id;
        opt.textContent = `${p.nome} (Estoque: ${p.estoque_atual})`;
        productSelect.appendChild(opt);
      });

      productSelect.disabled = false;
    }

    // ‚úÖ Dropdown do perfil
    const menuButton = document.getElementById('profile-menu-button');
    const menuDropdown = document.getElementById('profile-menu-dropdown');
    const menuContainer = document.getElementById('profile-menu-container');
    if (menuButton && menuDropdown && menuContainer) {
      menuButton.onclick = () => menuDropdown.classList.toggle('hidden');
      document.addEventListener('click', (e) => {
        if (!menuContainer.contains(e.target)) menuDropdown.classList.add('hidden');
      });
    }
  </script>
</Layout>

---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';

// Se já estiver logado, redireciona
if (Astro.locals.user) {
  return Astro.redirect('/dashboard');
}

let errorMessage = null;

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const email = formData.get('email')?.toString();
    const password = formData.get('password')?.toString();

    if (!email || !password) {
      throw new Error('Por favor, preencha todos os campos.');
    }

    // 1. Login no Supabase
    const { data, error } = await supabase.auth.signInWithPassword({
      email,
      password,
    });

    if (error) {
      if (error.message.includes('Invalid login')) throw new Error('E-mail ou senha incorretos.');
      throw error;
    }

    const { access_token, refresh_token } = data.session;
    
    // 2. CONFIGURAÇÃO DE COOKIES INTELIGENTE
    // Se estiver em produção (HTTPS), usa Secure. Se for desenvolvimento/IP local, não usa.
    const isProduction = import.meta.env.PROD;
    
    Astro.cookies.set('sb-access-token', access_token, {
      path: '/',
      httpOnly: true,
      secure: isProduction, // Agora é dinâmico!
      sameSite: 'lax',
    });
    
    Astro.cookies.set('sb-refresh-token', refresh_token, {
      path: '/',
      httpOnly: true,
      secure: isProduction, // Agora é dinâmico!
      sameSite: 'lax',
    });

    return Astro.redirect('/dashboard');

  } catch (error: any) {
    console.error(error);
    errorMessage = error.message;
  }
}
---

<Layout title="Login | EstoquePro">
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-200 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-2xl shadow-xl border border-gray-100">
      
      <div class="text-center">
        <div class="flex justify-center mb-4">
            <img src="https://i.ibb.co/1Gvrbvk7/ESTOQUE.png" alt="EstoquePro Logo" class="h-20 w-auto" />
        </div>
        <h2 class="mt-2 text-3xl font-extrabold text-gray-900 tracking-tight">
          Acessar Sistema
        </h2>
      </div>

      {errorMessage && (
        <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-md animate-fade-in">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-red-700 font-medium">
                {errorMessage}
              </p>
            </div>
          </div>
        </div>
      )}

      <form class="mt-8 space-y-6" method="POST">
        <div class="rounded-md shadow-sm space-y-4">
          <div>
            <label for="email-address" class="block text-sm font-medium text-gray-700 mb-1">E-mail</label>
            <input id="email-address" name="email" type="email" autocomplete="email" required class="appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="admin@empresa.com">
          </div>
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Senha</label>
            <input id="password" name="password" type="password" autocomplete="current-password" required class="appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="••••••••">
          </div>
        </div>

        <div>
          <button type="submit" class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-bold rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all shadow-md">
            Entrar
          </button>
        </div>
      </form>
    </div>
  </div>
</Layout>
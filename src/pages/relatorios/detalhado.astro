---
// src/pages/relatorios/detalhado.astro
import Layout from '../../layouts/Layout.astro';
import { supabase } from '../../lib/supabase';
import Navbar from '../../components/Navbar.astro';

const { data: { user } } = await supabase.auth.getUser();
if (!user) return Astro.redirect('/login');

const { data: userProfile } = await supabase.from('profiles').select('*').eq('id', user.id).single();
const userData = { ...user, profile: userProfile };
const userRole = String(userProfile?.role || '').toLowerCase();

// Permissão
if (!['admin', 'super admin'].includes(userRole)) return Astro.redirect('/dashboard');

// Parâmetros de Filtro (URL Search Params)
const url = new URL(Astro.request.url);
const dataInicio = url.searchParams.get('inicio') || new Date().toISOString().split('T')[0]; // Hoje
const dataFim = url.searchParams.get('fim') || new Date().toISOString().split('T')[0]; // Hoje
const tipoMov = url.searchParams.get('tipo') || 'todos';

// Lógica de Busca
let query = supabase
  .from('movimentacoes')
  .select(`
    id, tipo, quantidade, data_movimentacao, motivo,
    produtos (nome, categoria),
    clientes (nome)
  `)
  .gte('data_movimentacao', `${dataInicio}T00:00:00`)
  .lte('data_movimentacao', `${dataFim}T23:59:59`)
  .order('data_movimentacao', { ascending: false });

if (tipoMov !== 'todos') {
    query = query.eq('tipo', tipoMov);
}

const { data: movimentacoes, error } = await query;

function formatDate(dateString) {
    return new Date(dateString).toLocaleDateString('pt-BR', { day: '2-digit', month: '2-digit', year: '2-digit', hour: '2-digit', minute: '2-digit' });
}
---

<Layout title="Relatório Detalhado" user={userData}>
  <div class="min-h-screen bg-gray-50 flex flex-col">
    
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50 px-6 py-3 shadow-sm">
        <div class="max-w-7xl mx-auto w-full flex items-center justify-between">
            <div class="flex items-center gap-4">
                <a href="/relatorios" class="text-gray-500 hover:text-blue-600 transition">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
                </a>
                <h1 class="text-xl font-bold text-gray-800">Movimentações por Período</h1>
            </div>
            <Navbar user={userData} currentPath="/relatorios" />
        </div>
    </header>

    <main class="p-6 max-w-7xl mx-auto w-full space-y-6">
        
        <form class="bg-white p-6 rounded-xl shadow-sm border border-gray-200 grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Data Início</label>
                <input type="date" name="inicio" value={dataInicio} class="w-full border border-gray-300 rounded-lg px-3 py-2">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Data Fim</label>
                <input type="date" name="fim" value={dataFim} class="w-full border border-gray-300 rounded-lg px-3 py-2">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Tipo</label>
                <select name="tipo" class="w-full border border-gray-300 rounded-lg px-3 py-2 bg-white">
                    <option value="todos" selected={tipoMov === 'todos'}>Todos</option>
                    <option value="entrada" selected={tipoMov === 'entrada'}>Entradas</option>
                    <option value="saida" selected={tipoMov === 'saida'}>Saídas</option>
                </select>
            </div>
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 font-bold transition h-10 flex items-center justify-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                Filtrar
            </button>
        </form>

        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-100 flex justify-between items-center bg-gray-50/50">
                <h3 class="font-bold text-gray-700">Resultados ({movimentacoes?.length || 0})</h3>
                <button type="button" onclick="window.print()" class="text-blue-600 hover:underline text-sm font-medium flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/></svg>
                    Imprimir
                </button>
            </div>
            
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left">
                    <thead class="bg-gray-50 text-gray-500 font-medium border-b border-gray-100">
                        <tr>
                            <th class="px-6 py-3">Data</th>
                            <th class="px-6 py-3">Tipo</th>
                            <th class="px-6 py-3">Cliente</th>
                            <th class="px-6 py-3">Produto</th>
                            <th class="px-6 py-3 text-right">Qtd</th>
                            <th class="px-6 py-3">Motivo</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-50">
                        {movimentacoes && movimentacoes.length > 0 ? movimentacoes.map((mov: any) => (
                            <tr class="hover:bg-blue-50/30 transition">
                                <td class="px-6 py-3 text-gray-600 font-mono text-xs">{formatDate(mov.data_movimentacao)}</td>
                                <td class="px-6 py-3">
                                    <span class={`px-2 py-1 rounded text-xs font-bold uppercase ${mov.tipo === 'entrada' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700'}`}>
                                        {mov.tipo}
                                    </span>
                                </td>
                                <td class="px-6 py-3 font-medium text-gray-900">{mov.clientes?.nome || '-'}</td>
                                <td class="px-6 py-3 text-gray-800">
                                    {mov.produtos?.nome} <span class="text-gray-400 text-xs">({mov.produtos?.categoria})</span>
                                </td>
                                <td class="px-6 py-3 text-right font-bold text-gray-900">
                                    {mov.tipo === 'entrada' ? '+' : '-'}{mov.quantidade}
                                </td>
                                <td class="px-6 py-3 text-gray-500 italic text-xs">{mov.motivo}</td>
                            </tr>
                        )) : (
                            <tr><td colspan="6" class="px-6 py-12 text-center text-gray-400">Nenhum registro encontrado neste período.</td></tr>
                        )}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
  </div>
</Layout>
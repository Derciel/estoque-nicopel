---
// src/pages/clientes/novo.astro
import Layout from '../../layouts/Layout.astro';
import { supabase } from '$lib/supabase';
import Header from '../../components/Header.astro'; // Usando o Header reutilizável

const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/login');
}

let errorMessage: string | null = null;

// --- LÓGICA DE POST (CRIAR CLIENTE) ---
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const nome = formData.get('nome')?.toString();
    const cnpj = formData.get('cnpj')?.toString();

    // 1. Validação simples
    if (!nome || !cnpj) {
      throw new Error('Nome e CNPJ são campos obrigatórios.');
    }
    
    // 2. Preparar o objeto para o Supabase (baseado no seu SQL)
    const newClient = {
      nome,
      cnpj,
      email: formData.get('email')?.toString() || null,
      telefone: formData.get('telefone')?.toString() || null,
      endereco: formData.get('endereco')?.toString() || null,
    };

    // 3. Inserir no banco
    const { error } = await supabase.from('clientes').insert(newClient);

    if (error) {
      // Trata erro de CNPJ duplicado
      if (error.message.includes('unique constraint "clientes_cnpj_key"')) {
        throw new Error('Erro: Já existe um cliente com este CNPJ.');
      }
      throw error;
    }

    // 4. Sucesso! Redireciona para a lista
    return Astro.redirect('/clientes?success=Cliente criado com sucesso!');

  } catch (error: any) {
    console.error('Erro ao criar cliente:', error.message);
    errorMessage = `Erro ao salvar: ${error.message}`;
  }
}

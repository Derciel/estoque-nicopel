---
// src/pages/clientes/detalhes/[id].astro
import Layout from '../../../layouts/Layout.astro';
import { supabase } from '../../../lib/supabase';
import Navbar from '../../../components/Navbar.astro'; // Subindo 3 níveis

// Autenticação
const user = Astro.locals.user;
if (!user) return Astro.redirect('/login');

// --- DADOS DO USUÁRIO ---
const userName = user.profile?.name ?? 'Usuário';
const userRole = user.profile?.role ?? 'Visitante';
const userAvatar = userName.charAt(0).toUpperCase() || '#';
const currentPath = Astro.url.pathname;

// --- PERMISSÕES ---
const canSeeItens = ['Administrador', 'Estoquista_Entrada', 'Estoquista_Saida'].includes(userRole);
const canSeeClientes = ['Administrador', 'Estoquista_Saida', 'Estoquista_Entrada'].includes(userRole);
const canSeeEntrada = ['Administrador', 'Estoquista_Entrada'].includes(userRole);
const canSeeSaida = ['Administrador', 'Estoquista_Saida'].includes(userRole);
const canSeeRelatorios = ['Administrador'].includes(userRole);
const canSeeImportacao = ['Administrador'].includes(userRole);
const canSeeConfig = ['Administrador'].includes(userRole);

// --- BUSCA DE DADOS ---
const { id: clienteId } = Astro.params;

// 1. Dados do Cliente
const { data: cliente, error: errorCliente } = await supabase
  .from('clientes')
  .select('id, nome, cnpj, email, telefone, endereco')
  .eq('id', clienteId)
  .single();

// 2. Produtos do Cliente
const { data: produtos, error: errorProdutos } = await supabase
  .from('produtos')
  .select('*')
  .eq('cliente_id', clienteId)
  .eq('ativo', true)
  .order('nome');

if (!cliente) {
  return Astro.redirect('/clientes?error=Cliente não encontrado');
}
---

<Layout title={`Detalhes de ${cliente.nome}`} user={user}>
  <div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">

        <header class="bg-white/80 backdrop-blur-md border-b border-gray-200 sticky top-0 z-50 w-full">
      <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
        <div class="flex items-center gap-8">
          <img src="https://i.ibb.co/1Gvrbvk7/ESTOQUE.png" alt="EstoquePro logo" class="h-20 w-auto mr-4" />
          <Navbar user={user} currentPath={currentPath} />
        </div>
        <div class="relative" id="profile-menu-container">
          <button id="profile-menu-button" class="flex items-center gap-3 cursor-pointer">
            <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center shadow-lg">
              <span class="text-white text-sm font-medium">{userAvatar}</span>
            </div>
            <div class="hidden sm:block text-left">
              <p class="text-sm font-medium text-gray-900">{userName}</p>
              <p class="text-xs text-gray-500">{userRole}</p>
            </div>
          </button>
          <div id="profile-menu-dropdown" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-xl shadow-lg border border-gray-200 py-1 z-50">
            <div class="px-4 py-2 border-b border-gray-100">
              <p class="text-sm font-medium text-gray-900 truncate">{userName}</p>
              <p class="text-xs text-gray-500 truncate">{user.email}</p>
            </div>
            <a href="/api/auth/signout" class="flex items-center gap-3 px-4 py-2 text-sm text-red-600 hover:bg-red-50">
              <span>Sair</span>
            </a>
          </div>
        </div>
      </div>
    </header>

    <main class="p-6">
      <div class="max-w-7xl mx-auto">
        
        <nav class="flex mb-6" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-2">
            <li>
              <a href="/clientes" class="text-gray-500 hover:text-gray-700">Clientes</a>
            </li>
            <li>
              <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
            </li>
            <li>
              <span class="text-gray-700 font-medium">{cliente.nome}</span>
            </li>
          </ol>
        </nav>

                <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 mb-6">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-2xl font-bold text-gray-900">{cliente.nome}</h2>
            <a href={`/clientes/editar/${cliente.id}`} class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
              Editar Cliente
            </a>
          </div>
          <dl class="grid grid-cols-1 md:grid-cols-3 gap-x-4 gap-y-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">CNPJ</dt>
              <dd class="text-sm text-gray-900">{cliente.cnpj}</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Email</dt>
              <dd class="text-sm text-gray-900">{cliente.email || 'N/A'}</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Telefone</dt>
              <dd class="text-sm text-gray-900">{cliente.telefone || 'N/A'}</dd>
            </div>
          </dl>
        </div>

                <div class="bg-white rounded-2xl shadow-sm border border-gray-200">
          <div class="p-6 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Itens Associados a este Cliente</h3>
          </div>

          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b border-gray-200 bg-gray-50">
                  <th class="py-4 px-6 text-left text-sm font-medium text-gray-600">Produto (Item)</th>
                  <th class="py-4 px-6 text-left text-sm font-medium text-gray-600">Estoque</th>
                  <th class="py-4 px-6 text-left text-sm font-medium text-gray-600">Mínimo</th>
                  <th class="py-4 px-6 text-left text-sm font-medium text-gray-600">Status</th>
                  <th class="py-4 px-6 text-left text-sm font-medium text-gray-600">Ações</th>
                </tr>
              </thead>
              <tbody>
                {produtos && produtos.length > 0 ? produtos.map(produto => {
                  return (
                    <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors">
                      <td class="py-4 px-6">
                        <div class="font-medium text-gray-900">{produto.nome}</div>
                        <div class="text-sm text-gray-500">{produto.categoria}</div>
                      </td>
                      <td class="py-4 px-6 text-sm text-gray-800">{produto.estoque_atual} {produto.unidade_medida}</td>
                      <td class="py-4 px-6 text-sm text-gray-800">{produto.estoque_minimo}</td>
                      <td class="py-4 px-6">
                        {produto.estoque_atual === 0 ? (
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 border border-red-200">
                            Sem Estoque
                          </span>
                        ) : produto.estoque_atual <= produto.estoque_minimo ? (
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 border border-yellow-200">
                            Estoque Baixo
                          </span>
                        ) : (
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-200">
                            Em Estoque
                          </span>
                        )}
                      </td>
                      <td class="py-4 px-6 flex items-center space-x-3">
                        <a href={`/itens/editar/${produto.id}`} title="Editar Item" class="text-gray-500 hover:text-blue-600 transition">
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                        </a>
                      </td>
                    </tr>
                  );
                }) : (
                  <tr>
                    <td colspan="5" class="py-8 px-6 text-center text-gray-500">
                      Nenhum item (caixa) encontrado para este cliente.
                    </td>
                  </tr>
                )}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </div>

    <script>
    function initProfileDropdown() {
      const btn = document.getElementById('profile-menu-button');
      const menu = document.getElementById('profile-menu-dropdown');
      const container = document.getElementById('profile-menu-container');

      if (btn && menu && container) {
        // Clone para limpar listeners antigos
        const newBtn = btn.cloneNode(true);
        btn.parentNode.replaceChild(newBtn, btn);

        newBtn.addEventListener('click', () => menu.classList.toggle('hidden'));
        
        document.addEventListener('click', (e) => {
          if (!container.contains(e.target)) menu.classList.add('hidden');
        }, true);
      }
    }
    
    initProfileDropdown();
    document.addEventListener('astro:page-load', initProfileDropdown);
  </script>
</Layout>
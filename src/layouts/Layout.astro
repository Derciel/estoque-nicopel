---
// src/layouts/Layout.astro
interface Props {
  title: string;
  user: any;
}

const { title, user } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estoque Nicopel</title>
    <link rel="icon" type="image/png" href="https://i.ibb.co/Y7wWZSnC/Prancheta-5-1.png">
    <style>
      @tailwind base;
      @tailwind components;
      @tailwind utilities;
    </style>
  </head>
  <body>
    <slot />
    
    <script>
      // Adicionar interatividade bÃ¡sica
      document.addEventListener('DOMContentLoaded', function() {
        // Adicionar classe hover-lift para cards
        const cards = document.querySelectorAll('.bg-white');
        cards.forEach(card => {
          card.classList.add('hover-lift');
        });

        // Fechar alertas automaticamente
        const alerts = document.querySelectorAll('.bg-green-50, .bg-red-50');
        alerts.forEach(alert => {
          setTimeout(() => {
            alert.style.display = 'none';
          }, 5000);
        });
      });
    </script>
  </body>
</html>
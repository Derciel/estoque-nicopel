---
// src/components/Navbar.astro
const { user, currentPath } = Astro.props;

// Normaliza o cargo
const rawRole = user?.profile?.role || 'visitante';
const userRole = String(rawRole).toLowerCase().replace('_', ' ').trim();

// Permissões
const masterRoles = ['admin', 'super admin'];
const canSeeItens = masterRoles.includes(userRole);
const canSeeClientes = masterRoles.includes(userRole);
const canSeeEntrada = masterRoles.includes(userRole) || userRole === 'estoquista entrada' || userRole === 'estoquista_entrada';
const canSeeSaida = masterRoles.includes(userRole) || userRole === 'estoquista saida' || userRole === 'estoquista_saida';
const canSeeRelatorios = masterRoles.includes(userRole);
const canSeeImportacao = masterRoles.includes(userRole);
const canSeeConfig = masterRoles.includes(userRole);

// Estilos
const baseClass = "flex items-center gap-2 px-3 py-2 rounded-lg text-sm font-medium transition-all duration-200 whitespace-nowrap";
const activeClass = "bg-blue-600 text-white shadow-md";
const inactiveClass = "text-gray-600 hover:bg-gray-100 hover:text-blue-600";
---

<nav class="flex items-center gap-1 overflow-x-auto">
  
  <a href="/dashboard" class={`${baseClass} ${currentPath === '/dashboard' ? activeClass : inactiveClass}`}>
    <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/></svg>
    Dashboard
  </a>

  {canSeeItens && (
    <a href="/itens" class={`${baseClass} ${currentPath.startsWith('/itens') ? activeClass : inactiveClass}`}>
      <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/></svg>
      Itens
    </a>
  )}

  {canSeeClientes && (
    <a href="/clientes" class={`${baseClass} ${currentPath.startsWith('/clientes') ? activeClass : inactiveClass}`}>
      <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
      Clientes
    </a>
  )}

  {canSeeEntrada && (
    /* CORREÇÃO AQUI: href="/entrada" */
    <a href="/entrada" class={`${baseClass} ${currentPath.startsWith('/entrada') ? activeClass : inactiveClass}`}>
      <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/></svg>
      Entrada
    </a>
  )}

  {canSeeSaida && (
    /* CORREÇÃO AQUI: href="/saida" (Assumindo que saida.astro também está na raiz) */
    <a href="/saida" class={`${baseClass} ${currentPath.startsWith('/saida') ? activeClass : inactiveClass}`}>
      <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/></svg>
      Saída
    </a>
  )}

  {canSeeRelatorios && (
    <a href="/relatorios" class={`${baseClass} ${currentPath.startsWith('/relatorios') ? activeClass : inactiveClass}`}>
      <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/></svg>
      Relatórios
    </a>
  )}

  {canSeeImportacao && (
    <a href="/importacao" class={`${baseClass} ${currentPath.startsWith('/importacao') ? activeClass : inactiveClass}`}>
      <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/></svg>
      Importação
    </a>
  )}

  {canSeeConfig && (
    <a href="/config/usuarios" class={`${baseClass} ${currentPath.startsWith('/config') ? activeClass : inactiveClass}`}>
      <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
      Config de Usuários
    </a>
  )}
</nav>
---
// components/Navbar.astro
const { user, currentPath } = Astro.props;

const userRole = user?.profile?.role ?? 'Visitante';

const canSeeItens = ['admin', 'Estoquista_Entrada', 'Estoquista_Saida'].includes(userRole);
const canSeeClientes = ['admin', 'Estoquista_Entrada', 'Estoquista_Saida'].includes(userRole);
const canSeeEntrada = ['admin', 'Estoquista_Entrada'].includes(userRole);
const canSeeSaida = ['admin', 'Estoquista_Saida'].includes(userRole);
const canSeeRelatorios = ['admin'].includes(userRole);
const canSeeImportacao = ['admin'].includes(userRole);
const canSeeConfig = ['admin'].includes(userRole);
---

<nav class="flex items-center gap-1 bg-white/50 rounded-2xl border border-gray-200 p-1 shadow-sm">
  <!-- Dashboard -->
  <a href="/dashboard" class={`px-4 py-2 rounded-xl flex items-center gap-2 text-sm font-medium transition-all duration-300 ${currentPath === '/dashboard' ? 'bg-blue-50 text-blue-600' : 'text-gray-600 hover:bg-gray-50'}`}>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
    </svg>
    Dashboard
  </a>

  {canSeeItens && (
    <a href="/itens" class={`px-4 py-2 rounded-xl flex items-center gap-2 text-sm font-medium transition-all duration-300 ${currentPath.startsWith('/itens') ? 'bg-blue-50 text-blue-600' : 'text-gray-600 hover:bg-gray-50'}`}>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
      </svg>
      Itens
    </a>
  )}

  {canSeeClientes && (
    <a href="/clientes" class={`px-4 py-2 rounded-xl flex items-center gap-2 text-sm font-medium transition-all duration-300 ${currentPath.startsWith('/clientes') ? 'bg-blue-50 text-blue-600' : 'text-gray-600 hover:bg-gray-50'}`}>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
      </svg>
      Clientes
    </a>
  )}

  {canSeeEntrada && (
    <a href="/entrada" class={`px-4 py-2 rounded-xl flex items-center gap-2 text-sm font-medium transition-all duration-300 ${currentPath.startsWith('/entrada') ? 'bg-green-50 text-green-600' : 'text-gray-600 hover:bg-gray-50'}`}>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v12m0 0l-6-6m6 6l6-6"/>
      </svg>
      Entrada
    </a>
  )}

  {canSeeSaida && (
    <a href="/saida" class={`px-4 py-2 rounded-xl flex items-center gap-2 text-sm font-medium transition-all duration-300 ${currentPath.startsWith('/saida') ? 'bg-red-50 text-red-600' : 'text-gray-600 hover:bg-gray-50'}`}>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v12m0 0l6-6m-6 6l-6-6"/>
      </svg>
      Saída
    </a>
  )}

  {canSeeRelatorios && (
    <a href="/relatorios" class={`px-4 py-2 rounded-xl flex items-center gap-2 text-sm font-medium transition-all duration-300 ${currentPath.startsWith('/relatorios') ? 'bg-blue-50 text-blue-600' : 'text-gray-600 hover:bg-gray-50'}`}>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
      </svg>
      Relatórios
    </a>
  )}

  {canSeeImportacao && (
    <a href="/importacao" class={`px-4 py-2 rounded-xl flex items-center gap-2 text-sm font-medium transition-all duration-300 ${currentPath.startsWith('/importacao') ? 'bg-blue-50 text-blue-600' : 'text-gray-600 hover:bg-gray-50'}`}>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
      </svg>
      Importação
    </a>
  )}

  {canSeeConfig && (
    <a href="/config/usuarios" class={`px-4 py-2 rounded-xl flex items-center gap-2 text-sm font-medium transition-all duration-300 ${currentPath.startsWith('/config') ? 'bg-blue-50 text-blue-600' : 'text-gray-600 hover:bg-gray-50'}`}>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
      </svg>
      Configurações
    </a>
  )}
</nav>
